# Kilo Agent Toolbox
ARG BASE_IMAGE=ghcr.io/oliveagle/toolbox-opencode/toolbox-base:latest
FROM ${BASE_IMAGE}

LABEL agent="kilo"
LABEL description="Kilo AI coding agent toolbox"

# Kilo 通常通过 npm 安装
RUN npm install -g kilo-ai 2>/dev/null || \
    echo "Kilo 需要手动安装: npm install -g kilo-ai"

RUN mkdir -p /home/toolboxuser/.config/kilo && \
    chown -R toolboxuser:toolboxuser /home/toolboxuser/.config

ENV AGENT_NAME=kilo
ENV AGENT_CMD=kilo

CMD ["/bin/bash"]
